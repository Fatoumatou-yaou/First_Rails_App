<h1>Articles</h1>


<% if flash[:notice]%>
<div><%=  flash[:notice]%></div>

<% end %>
<% @posts.each do |post| %>

<h2> <%= post.title %></h2>
<hr>
<h2> <%= post.content %></h2>
<hr>
<h2> <%= post.author %></h2>
<p>
    <a href="<%= post_path (post.id)%>" class="bg-blue-500 ">Lire la suite</a>
    <a href="<%= edit_post_path (post.id)%>" class="bg-blue-500 ">Modifier</a>
    <%= link_to 'Supprimer', post_path(post.id), method: :delete, data: { confirm: 'Êtes-vous sûr de vouloir supprimer cet article ?' } %>

</p>

<% end %>
<p>
    <a href="<%= new_post_path%>" class="bg-blue-500">Nouveau</a>
</p>